{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ“Ÿ Start Dev Server",
      "type": "npm",
      "script": "start",
      "group": {
        "kind": "test",
        //"isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "options": {
        "statusbar": {
          "label": "$(debug-start) Docusaurus Dev",
          "priority": 0
        }
      }
    },
    {
      "label": "ğŸ—ï¸ Build Production",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        //"isDefault": true
      }
    },
    {
      "label": "ğŸš€ Deploy Documentation",
      "type": "npm",
      "script": "deploy",
      "problemMatcher": []
    },
    {
      "label": "ğŸŒ Extract Translations",
      "type": "npm",
      "script": "write-translations"
    },
    {
      "label": "ğŸ†” Add Heading IDs",
      "type": "npm",
      "script": "write-heading-ids"
    },
    {
      "label": "ğŸ§© Swizzle Component",
      "type": "npm",
      "script": "swizzle",
      "args": ["${input:swizzleComponent}"]
    },
    {
      "label": "ğŸ§ª Type Checking",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": "$tsc"
    },
    {
      "label": "ğŸ‘ï¸ Type Check (Watch Mode)",
      "type": "shell",
      "command": "npm run typecheck -- --watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    },
    {
      "label": "ğŸ’¥ Clear Cache",
      "type": "npm",
      "script": "clear"
    },
    {
      "label": "ğŸ” Preview Build",
      "type": "npm",
      "script": "serve"
    }
  ],
  "inputs": [
    {
      "id": "swizzleComponent",
      "type": "promptString",
      "description": "Component to swizzle (e.g. '@docusaurus/theme-classic Footer'):"
    }
  ]
}

