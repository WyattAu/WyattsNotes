{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ“Ÿ Start Dev Server",
      "type": "npm",
      "script": "start",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "$(debug-start) Dev Server",
          "priority": 0
        }
      },
      "isBackground": true
    },
    {
      "label": "ğŸ—ï¸ Build Production",
      "type": "npm",
      "script": "build",
      "group": "build"
    },
    {
      "label": "ğŸŒ Preview Build",
      "type": "npm",
      "script": "serve",
      "dependsOn": "ğŸ—ï¸ Build Production"
    },
    {
      "label": "ğŸš€ Deploy Documentation",
      "type": "npm",
      "script": "deploy",
      "dependsOn": "ğŸ—ï¸ Build Production"
    },
    {
      "label": "ğŸ§ª Type Check",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "ğŸ‘ï¸ Type Check (Watch)",
      "type": "npm",
      "script": "typecheck",
      "args": [
        "--watch"
      ],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "ğŸ§¹ Clear Cache",
      "type": "npm",
      "script": "clear"
    },
    {
      "label": "ğŸŒ Extract Translations",
      "type": "npm",
      "script": "write-translations"
    },
    {
      "label": "#ï¸âƒ£ Add Heading IDs",
      "type": "npm",
      "script": "write-heading-ids"
    },
    {
      "label": "ğŸ§© Swizzle Component",
      "type": "npm",
      "script": "swizzle",
      "args": [
        "${input:swizzleComponent}"
      ]
    },
    {
      "label": "ğŸ’… Format Files (Prettier)",
      "type": "npm",
      "script": "format",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "ğŸ” Lint Project (ESLint)",
      "type": "npm",
      "script": "lint",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "âœ¨ Format & Lint Project",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸ’… Format Files (Prettier)",
        "ğŸ” Lint Project (ESLint)"
      ]
    }
  ],
  "inputs": [
    {
      "id": "swizzleComponent",
      "type": "promptString",
      "description": "Component to swizzle (example: @docusaurus/theme-classic Footer):",
      "default": "@docusaurus/theme-classic"
    }
  ]
}
