{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "📟 Start Dev Server",
      "type": "npm",
      "script": "start",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "$(debug-start) Dev Server",
          "priority": 0
        }
      },
      "isBackground": true
    },
    {
      "label": "🏗️ Build Production",
      "type": "npm",
      "script": "build",
      "group": "build"
    },
    {
      "label": "🌐 Preview Build",
      "type": "npm",
      "script": "serve",
      "dependsOn": "🏗️ Build Production"
    },
    {
      "label": "🚀 Deploy Documentation",
      "type": "npm",
      "script": "deploy",
      "dependsOn": "🏗️ Build Production"
    },
    {
      "label": "🧪 Type Check",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "👁️ Type Check (Watch)",
      "type": "npm",
      "script": "typecheck",
      "args": [
        "--watch"
      ],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "🧹 Clear Cache",
      "type": "npm",
      "script": "clear"
    },
    {
      "label": "🌍 Extract Translations",
      "type": "npm",
      "script": "write-translations"
    },
    {
      "label": "#️⃣ Add Heading IDs",
      "type": "npm",
      "script": "write-heading-ids"
    },
    {
      "label": "🧩 Swizzle Component",
      "type": "npm",
      "script": "swizzle",
      "args": [
        "${input:swizzleComponent}"
      ]
    },
    {
      "label": "💅 Format Files (Prettier)",
      "type": "npm",
      "script": "format",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "🔍 Lint Project (ESLint)",
      "type": "npm",
      "script": "lint",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "✨ Format & Lint Project",
      "dependsOrder": "sequence",
      "dependsOn": [
        "💅 Format Files (Prettier)",
        "🔍 Lint Project (ESLint)"
      ]
    }
  ],
  "inputs": [
    {
      "id": "swizzleComponent",
      "type": "promptString",
      "description": "Component to swizzle (example: @docusaurus/theme-classic Footer):",
      "default": "@docusaurus/theme-classic"
    }
  ]
}
